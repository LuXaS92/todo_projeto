<tr class='<%= task.parent? ? 'border-top' : '' %>'>
  <td class="<%= task.sub_task? ? 'ps-5' : '' %>">
    <span class='text-<%= task.css_color %> pe-3'><%= task.symbol %></span>

    <% if task.done? %>
      <s class='text-muted'><%= task.description %></s>
    <% else %>
     <%= task.description %> 
    <% end %>
  </td>

  <td><%= l task.due_date %></td>

  <td class='text-right ps-0'>
    <% if task.parent? %>
      <%= link_to '+ Sub-tarefa', new_task_path, class: 'btn btn-success btn-sm' %>
    <% end %>

    <%= link_to 'Editar', edit_task_path(task), class: 'btn btn-secondary btn-sm' %>

    <%= link_to 'Apagar', task, method: :delete, class: 'btn btn-danger btn-sm',
    data: { confirm: 'Voce tem certeza?' } %>
  </td>
</tr>   